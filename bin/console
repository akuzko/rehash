#!/usr/bin/env ruby

require "bundler/setup"
require "rehash"

using Rehash

hash = {
  foo: {
    bar: {
      baz: 1
    }
  },
  other_foo: 2,
  foos: [
    { bar: { baz: '3-1' } },
    { bar: { baz: '3-2' } }
  ],
  items: [4],
  config: [
    {name: 'important_value', value: 'yes'},
    {name: 'secondary_value', value: 'no'}
  ]
}

rehash = hash.rehash do |re|
  re.(
    '/foo/bar/baz' => '/foo',
    '/other_foo'   => '/ofoo',
    '/items[0]'    => '/first_item'
  )

  re.('/foos' => '/foos') do |items|
    items.map { |item| item.rehash('/bar/baz' => '/value') }
  end

  re.('/config[name:important_value]/value' => '/important')
end

require "pry"
Pry.start
